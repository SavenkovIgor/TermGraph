{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "environment": {
        "QT_ROOT": "$env{HOME}/Qt",
        "QT_VERSION": "6.4.0",
        "QT_VERSION_ROOT": "$env{QT_ROOT}/$env{QT_VERSION}"
      },
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      }
    },
    {
      "name": "dev_desktop",
      "displayName": "Developer desktop build",
      "inherits": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": true,
        "CMAKE_CXX_FLAGS_INIT": "-DQT_QML_DEBUG",
        "CMAKE_PREFIX_PATH": "$env{QT_VERSION_ROOT}/gcc_64;${sourceDir}/build/${presetName}/conan-dependencies"
      }
    },
    {
      "name": "release_desktop",
      "displayName": "Release desktop build",
      "inherits": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": true,
        "CMAKE_PREFIX_PATH": "$env{QT_VERSION_ROOT}/gcc_64;${sourceDir}/build/${presetName}/conan-dependencies"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev_desktop",
      "configurePreset": "dev_desktop",
      "targets": "all"
    },
    {
      "name": "release_desktop",
      "configurePreset": "release_desktop",
      "targets": "all"
    }
  ]
}