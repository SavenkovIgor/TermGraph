{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "preset",
            "type": "pickString",
            "description": "Select the preset:",
            "options": [
                "desktop_dev",
                "desktop_release",
                "wasm_dev",
                "wasm_release"
            ]
        }
    ],
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "source ~/emsdk/emsdk_env.sh && source .venv/bin/activate && ./project.py --build --preset ${input:preset}",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "source ~/emsdk/emsdk_env.sh && source .venv/bin/activate && ./project.py --run --preset ${input:preset}",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "source ~/emsdk/emsdk_env.sh && source .venv/bin/activate && ./project.py --test --preset ${input:preset}",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clear",
            "type": "shell",
            "command": "source .venv/bin/activate && ./project.py --clear",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build and Run",
            "dependsOn": [
                "Build",
                "Run"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run HTTP Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "http.server",
                "--directory",
                "build/wasm_release",
                "8000"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Open Browser",
            "type": "shell",
            "command": "firefox",
            "args": [
                "http://localhost:8000/TermGraph.html"
            ],
            "problemMatcher": []
        }
    ]
}
