{
    "version": "2.0.0",
    "problemMatcher": [],
    "inputs": [
        {
            "id": "preset",
            "type": "pickString",
            "description": "Select the preset:",
            "options": [
                "desktop_dev",
                "desktop_release",
                "wasm_dev",
                "wasm_release"
            ]
        },
        {
            "id": "wasmPreset",
            "type": "pickString",
            "description": "Select the WASM preset:",
            "options": [
                "wasm_dev",
                "wasm_release"
            ]
        },
        {
            "id": "preview",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": [
                "http://localhost:8000"
            ]
        }
    ],
    "tasks": [
        {
            "label": "Build",
            "detail": "Build the project using the selected preset",
            "type": "shell",
            "command": "./project.py --build --preset ${input:preset}",
            "icon": {
                "id": "tools"
            },
            "presentation": {
                "revealProblems": "onProblem",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run",
            "detail": "Run the project using the selected preset",
            "type": "shell",
            "command": "./project.py --run --preset ${input:preset}",
            "icon": {
                "id": "play"
            }
        },
        {
            "label": "Test",
            "detail": "Test the project using the selected preset",
            "type": "shell",
            "command": "./project.py --test --preset ${input:preset}",
            "icon": {
                "id": "beaker"
            }
        },
        {
            "label": "CMake Install",
            "detail": "Run CMake install (make sense only for WASM presets)",
            "type": "shell",
            "command": "./project.py --cmake-install --preset ${input:wasmPreset}",
            "dependsOn": [ "Build" ]
        },
        {
            "label": "Clear",
            "detail": "Clear the build directory",
            "type": "shell",
            "command": "./project.py --clear",
            "icon": {
                "id": "trash"
            }
        },
        {
            "label": "Build and Run",
            "detail": "Build and run the project using the selected preset",
            "dependsOn": [
                "Build",
                "CMake Install",
                "Run"
            ],
            "dependsOrder": "sequence",
            "icon": {
                "id": "run-all"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run HTTP Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "http.server",
                "--bind",
                "0.0.0.0",
                "--directory",
                "build/${input:wasmPreset}/dist",
                "8000"
            ],
            "isBackground": true,
            "dependsOn": [ "CMake Install" ],
            "icon": {
                "id": "server"
            },
            "problemMatcher": []
        },
        {
            "label": "Open Browser",
            "detail": "Open the browser to view the application",
            "type": "shell",
            "command": "echo ${input:preview}",
            "presentation": {
                "reveal": "silent",
                "focus": false
            },
            "icon": {
                "id": "globe"
            },
            "problemMatcher": []
        }
    ]
}
